@page
@model RequestMagicLinkModel

@{
    ViewData["Title"] = "Sign in with email link";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <p>Enter your email address and we'll send you a link to sign in.</p>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ReturnUrl" />
            <button type="submit" class="w-100 btn btn-lg btn-primary">Send sign-in link</button>
        </form>
        <div class="mt-3">
            <p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Back to login</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
